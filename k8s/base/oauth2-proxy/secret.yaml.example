---
# Example secret template - DO NOT COMMIT THIS FILE WITH REAL CREDENTIALS
# Copy this to secret.yaml and fill in your OAuth provider details
apiVersion: v1
kind: Secret
metadata:
  name: oauth2-proxy-secret
  namespace: auth
  labels:
    app: oauth2-proxy
type: Opaque
stringData:
  # OAuth Provider Configuration
  # For GitHub: https://github.com/settings/developers
  client-id: "YOUR_GITHUB_CLIENT_ID"
  client-secret: "YOUR_GITHUB_CLIENT_SECRET"
  
  # Cookie secret for encrypting session cookies
  # Generate with: openssl rand -base64 32
  cookie-secret: "REPLACE_WITH_32_BYTE_BASE64_STRING"
  
  # Optional: Additional provider configurations
  # For Google OAuth:
  # client-id: "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
  # client-secret: "YOUR_GOOGLE_CLIENT_SECRET"
  
  # For Azure AD B2C:
  # client-id: "YOUR_AZURE_CLIENT_ID"
  # client-secret: "YOUR_AZURE_CLIENT_SECRET"
  # oidc-issuer-url: "https://YOUR_TENANT.b2clogin.com/YOUR_TENANT.onmicrosoft.com/v2.0/"
